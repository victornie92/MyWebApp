@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Master.cshtml";
    var mainImageUrl = "";
    if (Model.Content.HasValue("mainImage"))
    {
        mainImageUrl = Model.Content.GetPropertyValue<IPublishedContent>("mainImage").Url;
    }
}
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">
                Build a website
                <strong>worth visiting</strong>
            </h2>
            <hr>
            <img class="img-responsive img-border img-left" src="@mainImageUrl" alt="">
            <hr class="visible-xs">
            @Umbraco.Field("mainContent")
        </div>
    </div>
</div>








